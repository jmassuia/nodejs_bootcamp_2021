extend baseEmail

block content
  p Hi #{user.name},
  p Forgot your password? Submit a request with your new password and passwordConfirm to:  #{url}.
  p (Website for this action not yet implemented.)
  table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
    tbody
      tr
        td(align='left')
          table(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
              tr
                td
                  a(href=`${url}`, target='_blank') Reset tour password
  p If you didn't forget your password, please disregard this email!